<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="130px"
        android:fontFamily="serif"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20px"
        android:textStyle="italic"
        android:typeface="serif"
         />

    <TextView
        android:id="@+id/report_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15px"
        android:fontFamily="sans-serif"
        android:text="@string/report"
        android:textSize="15px"
        android:textStyle="bold"
        android:typeface="sans"
         />

    <TextView
        android:id="@+id/report_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8px"
        android:layout_marginTop="5px"
        android:textSize="9px"
         />

    <!-- - -->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150px"
        android:fontFamily="sans-serif"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="7px" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7px"
        android:fontFamily="sans-serif"
        android:text="birthday"
        android:textColor="@color/black"
        android:textSize="7px" />

    <TextView
        android:id="@+id/occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7px"
        android:fontFamily="sans-serif"
        android:text="occupation"
        android:textColor="@color/black"
        android:textSize="7px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/height_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3px"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7px"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="height"
            android:textColor="@color/black"
            android:textSize="7px" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3px"
            android:layout_marginStart="3px"
            android:layout_marginTop="7px"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="weight"
            android:textColor="@color/black"
            android:textSize="7px" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/householdmembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3px"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7px"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="householdmembers"
            android:textColor="@color/black"
            android:textSize="7px" />

        <TextView
            android:id="@+id/children"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3px"
            android:layout_marginStart="3px"
            android:layout_marginTop="7px"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="children"
            android:textColor="@color/black"
            android:textSize="7px" />
    </LinearLayout>

    <TextView
        android:id="@+id/sleep_pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7px"
        android:fontFamily="sans-serif"
        android:text="sleep pattern"
        android:textColor="@color/black"
        android:textSize="7px" />

    <TextView
        android:id="@+id/stay_awake_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7px"
        android:fontFamily="sans-serif"
        android:text="problems staying awake"
        android:textColor="@color/black"
        android:textSize="7px" />

    <TextView
        android:id="@+id/problem_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7px"
        android:fontFamily="sans-serif"
        android:text="frequency of problems"
        android:textColor="@color/black"
        android:textSize="7px" />

    <TextView
        android:id="@+id/since_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7px"
        android:fontFamily="sans-serif"
        android:text="since when"
        android:textColor="@color/black"
        android:textSize="7px" />

    <TextView
        android:id="@+id/other_sleep_problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7px"
        android:fontFamily="sans-serif"
        android:text="other sleep problems"
        android:textColor="@color/black"
        android:textSize="7px" />

    <TextView
        android:id="@+id/other_diseases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7px"
        android:fontFamily="sans-serif"
        android:text="other diseases"
        android:textColor="@color/black"
        android:textSize="7px" />

    <TextView
        android:id="@+id/general_medication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7px"
        android:fontFamily="sans-serif"
        android:text="general medication"
        android:textColor="@color/black"
        android:textSize="7px" />
</LinearLayout>